<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.application.chetna_priya.moviemagic" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <provider
            android:authorities="@string/content_authority"
            android:name=".data.MovieProvider"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SettingsAcitvity"
            android:label="@string/title_activity_settings_acitvity"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.application.chetna_priya.moviemagic.MainActivity" />
        </activity>

        <activity
            android:name=".MovieDetailsTab"
            android:label="@string/title_activity_movie_details_fragment"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.application.chetna_priya.moviemagic.MainActivity" />
        </activity>
    </application>

</manifest>
