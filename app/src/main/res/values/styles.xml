<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/sky_blue</item>
        <item name="colorPrimaryDark">@color/dark_blue</item>
        <item name="android:windowContentTransitions">true</item>
    </style>
    <style name="text_style_large_condensed" parent="AppTheme">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
    </style>

    <style name="text_style_large_light" parent="AppTheme">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
    </style>

    <style name="text_style_medium_condensed" parent="AppTheme">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <style name="text_style_medium_light" parent="AppTheme">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <style name="text_style_small_light" parent="AppTheme">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
    </style>

</resources>
