<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.application.chetna_priya.moviemagic.Favorite_dialog_fragment">

   <TextView
       android:id="@+id/tv_dialog_title"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:gravity="center_horizontal"
       android:padding="@dimen/view_padding"
       android:textColor="@android:color/black"
       style="@style/text_style_large_condensed"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/very_light_grey"/>

    <TextView
        android:id="@+id/tv_dialog_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:padding="@dimen/view_padding"
        android:textColor="@android:color/black"
        style="@style/text_style_medium_condensed"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_dialog_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_for_button_in_dialog"
            android:text="@string/yes"
            android:textColor="@color/dark_blue"
            style="@style/text_style_large_condensed"/>

        <TextView
            android:id="@+id/tv_dialog_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_between_text"
            android:padding="@dimen/padding_for_button_in_dialog"
            android:text="@string/back"
            android:textColor="@color/dark_blue"
            style="@style/text_style_large_condensed"/>
    </LinearLayout>

</LinearLayout>
