<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        card_view:cardBackgroundColor="@color/cardview_dark_background"
        android:layout_gravity="center">
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/padding_between_text"
                android:layout_marginStart="@dimen/padding_between_text"
                style="@style/TextAppearance.AppCompat.Headline"
                android:gravity="start|center_vertical"
                android:textColor="@android:color/white"
                android:text="Legend of Tarzan"/>

            <ImageView
                android:id="@+id/img_movie_image"
                android:layout_width="200dp"
                android:layout_height="200dp"
                tools:src="@drawable/error"
                android:layout_margin="@dimen/image_view_padding"
                />

        </LinearLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>